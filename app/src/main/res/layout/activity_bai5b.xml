<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Bai5b">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="135dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="10dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                tools:srcCompat="@drawable/ic_launcher_foreground"/>

            <LinearLayout
                android:layout_width="147dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView14"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="10pt"
                    android:textColor="#FF0000"
                    android:text="Lê Thị Hồng" />

                <TextView
                    android:id="@+id/textView15"
                    android:layout_width="match_parent"
                    android:textSize="6pt"
                    android:layout_height="wrap_content"
                    android:text="Sinh viên học giỏi năng động, có thành  tích" />

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <RadioButton
                        android:textColor="@color/black"
                        android:checked="true"
                        android:id="@+id/radioButton2"
                        android:layout_width="80dp"
                        android:buttonTint="@color/Pink"
                        android:layout_height="wrap_content"
                        android:text="Nu" />

                    <RadioButton
                        android:textColor="@color/black"
                        android:buttonTint="@color/Pink"
                        android:id="@+id/radioButton"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="Nam" />
                </RadioGroup>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="135dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="274dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                tools:srcCompat="@drawable/ic_launcher_foreground" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvName2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Lê Như Hoa"
                    android:textColor="#FF0000"
                    android:textSize="10pt" />

                <TextView
                    android:id="@+id/tvContent2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Dễ thương, năng động"
                    android:textSize="6pt" />

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <RadioButton
                        android:textColor="@color/black"
                        android:buttonTint="@color/Pink"
                        android:id="@+id/radNu2"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="Nu" />

                    <RadioButton
                        android:buttonTint="@color/Pink"
                        android:checked="true"
                        android:id="@+id/radNam2"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="Nam" />
                </RadioGroup>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="135dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="274dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:srcCompat="@drawable/ic_launcher_foreground" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvName3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Trần Hồng Hạnh"
                    android:textColor="#FF0000"
                    android:textSize="10pt" />

                <TextView
                    android:id="@+id/tvContent3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Có tình yêu động vật, có ý chí phấn đấu"
                    android:textSize="6pt" />

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <RadioButton
                        android:buttonTint="@color/Pink"
                        android:checked="true"
                        android:id="@+id/radNu3"
                        android:layout_width="80dp"
                        android:textColorHint="@color/black"
                        android:layout_height="wrap_content"
                        android:text="Nu" />

                    <RadioButton
                        android:textColor="@color/black"
                        android:buttonTint="@color/Pink"
                        android:id="@+id/radNam3"
                        android:layout_width="79dp"
                        android:layout_height="wrap_content"
                        android:text="Nam" />
                </RadioGroup>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="135dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="274dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:srcCompat="@android:drawable/arrow_up_float" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvName4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Võ Thúy Bình"
                    android:textColor="#FF0000"
                    android:textSize="10pt" />

                <TextView
                    android:id="@+id/tvContent4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Buồn vui bất thường"
                    android:textSize="6pt" />

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <RadioButton
                        android:textColor="@color/black"
                        android:buttonTint="@color/Pink"
                        android:id="@+id/radNu4"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="Nu" />

                    <RadioButton
                        android:textColor="@color/black"
                        android:buttonTint="@color/Pink"
                        android:checked="true"
                        android:id="@+id/radNam4"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="Nam" />
                </RadioGroup>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="135dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="274dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:srcCompat="@android:drawable/btn_star_big_on" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvName5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Vương Hùng"
                    android:textColor="#FF0000"
                    android:textSize="10pt" />

                <TextView
                    android:id="@+id/tvContent5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Thành đạt, có khả năng giao tiếp tốt"
                    android:textSize="6pt" />

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <RadioButton
                        android:textColor="@color/black"
                        android:buttonTint="@color/Pink"
                        android:checked="true"
                        android:id="@+id/radNu5"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="Nu" />

                    <RadioButton
                        android:textColor="@color/black"
                        android:buttonTint="@color/Pink"
                        android:id="@+id/radNam5"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="Nam" />
                </RadioGroup>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>